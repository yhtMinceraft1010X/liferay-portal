		property portal.acceptance = "true";

		Picklist.addPicklistViaAPI(picklistName = "Picklist Test");

		Picklist.gotoPicklists();

		Picklist.gotoPicklistView(picklistName = "Picklist Test");

		Picklist.addPicklistItemViaUI(picklistItemName = "Picklist Item Name Test", picklistItemKey = "PicklistItemKeyTest");

		Picklist.assertPicklistItem(picklistItemName = "Picklist Item Name Test", picklistItemKey = "PicklistItemKeyTest");
	}

