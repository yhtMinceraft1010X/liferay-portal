@component-name = "portal-solutions"
definition {

	property osgi.modules.includes = "site-initializer-testray";
	property portal.release = "false";
	property portal.upstream = "true";
	property release.feature.flags.disable.DISABLE_PRIVATE_LAYOUTS = "true";
	property testray.main.component.name = "Testray 2";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Testray.createTestraySite(siteName = "Testray 2");

		Refresh();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		Testray.tearDownCP();

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

	@description = "LPS-150343 - Verify if when you click on the Cases tab, the Cases page is shown."
	@priority = "5"
	test CanAcessCasesPage {
		ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.4");

		Testray.goToProjectPage(projectName = "Liferay Portal 7.4");

		Testray.projectTabNavigator(navTabName = "Cases");

		Testray.viewTitlePage(key_title = "Cases");
	}

	@description = "LPS-150344 - Verify if when you click on the Requirements tab, the Requirements page is shown."
	@priority = "5"
	test CanAcessRequirementsPage {
		ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.4");

		Testray.goToProjectPage(projectName = "Liferay Portal 7.4");

		Testray.projectTabNavigator(navTabName = "Requirements");

		Testray.viewTitlePage(key_title = "Requirements");
	}

	@description = "LPS-150342 - Verify if when you click on the Suites tab, the Suites page is shown."
	@priority = "5"
	test CanAcessSuitesPage {
		ApplicationsMenu.gotoSite(site = "Testray 2");

		Testray.createProjectTestray(key_name = "Liferay Portal 7.4");

		Testray.goToProjectPage(projectName = "Liferay Portal 7.4");

		Testray.projectTabNavigator(navTabName = "Suites");

		Testray.viewTitlePage(key_title = "Suites");
	}

}