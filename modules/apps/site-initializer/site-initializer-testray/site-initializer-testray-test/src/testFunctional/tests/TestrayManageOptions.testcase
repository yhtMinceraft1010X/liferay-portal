@component-name = "portal-solutions"
definition {

	property portal.release = "false";
	property portal.upstream = "true";
	property testray.main.component.name = "Testray 2";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Testray.createTestraySite(siteName = "Testray 2");

		Refresh();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		Testray.tearDownCP();

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
	}

    @description = "LPS-150348 - Verify that User can access category modal."
    @priority = "5"
    test CanAcessOptionModal {
        ApplicationsMenu.gotoSite(key_site = "Testray 2");

        Click(locator1 = "Testray#MANAGE_SIDEBAR");

        Click(locator1 = "TestrayManageOptions#OPTIONS_MANAGE");

        AssertElementPresent(locator1 = "TestrayManageOptions#OPTIONS_MODAL");

        Click(locator1 = "TestrayManageOptions#CLOSE_MODAL");
    }

    @description = "LPS-150349 - Verify that User can add new option."
    @priority = "5"
    test CanAddNewOption {
        ApplicationsMenu.gotoSite(key_site = "Testray 2");

        Click(locator1 = "Testray#MANAGE_SIDEBAR");

        Click(locator1 = "TestrayManageOptions#OPTIONS_MANAGE");

        Click(locator1 = "TestrayManageOptions#ADD_OPTIONS");

        Type(
            locator1 = "TestrayManageOptions#NEW_OPTION_NAME",
            value1 = "Test");

        Click(locator1 = "TestrayManageOptions#SAVE_BUTTON");

        AssertElementPresent(
            locator1 = "TestrayManageOptions#OPTIONS_NAME",
            value = "Test");
    }
}