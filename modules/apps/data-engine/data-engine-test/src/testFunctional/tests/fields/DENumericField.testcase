		Button.clickPublish();

		WebContentNavigator.gotoEditCP(webContentTitle = "Web Content Title");

		DERenderer.inputDataInNumericField(
			fieldLabel = "Numeric",
			value = "");

		Button.clickPublish();

		WebContentNavigator.gotoEditCP(webContentTitle = "Web Content Title");

		DERenderer.assertDataInNumericField(
			fieldLabel = "Numeric",
			value = "");
