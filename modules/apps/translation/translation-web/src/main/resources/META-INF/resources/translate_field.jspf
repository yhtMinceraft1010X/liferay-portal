<clay:row>
	<clay:col
		md="6"
	>
		<c:choose>
			<c:when test="<%= html %>">
				<label class="control-label">
					<%= label %>
				</label>

				<div class="translation-editor-preview" dir="<%= sourceContentDir %>">
					<%= sourceContent %>
				</div>
			</c:when>
			<c:otherwise>
				<aui:input dir="<%= sourceContentDir %>" label="<%= label %>" name="<%= infoField.getUniqueId() %>" readonly="true" tabIndex="-1" type='<%= multiline ? "textarea" : "text" %>' value="<%= sourceContent %>" />
			</c:otherwise>
		</c:choose>
	</clay:col>

	<clay:col
		md="6"
	>
		<c:choose>
			<c:when test="<%= html %>">
				<label class="control-label">
					<%= label %>
				</label>

				<div class="translation-editor-preview" dir="<%= LanguageUtil.get(translateDisplayContext.getTargetLocale(), "lang.dir") %>">
					<%= targetContent %>
				</div>
			</c:when>
			<c:otherwise>
				<aui:input dir='<%= LanguageUtil.get(translateDisplayContext.getTargetLocale(), "lang.dir") %>' disabled="<%= true %>" label="<%= label %>" name='<%= "infoField--" + infoField.getUniqueId() + "--" %>' type='<%= multiline ? "textarea" : "text" %>' value="<%= targetContent %>" />
			</c:otherwise>
		</c:choose>
	</clay:col>
</clay:row>