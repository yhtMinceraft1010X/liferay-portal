	}

	@description = "Verify that the Subfolder can use the Workflow of the Parent Folder"
	@ignore = "Test Stub"
	@priority = "4"
	test SubfolderCanUseWorkflowOfParentFolder {

		// TODO LRQA-69289 SubfolderCanUseWorkflowOfParentFolder pending implementation

	}

}