{
	"description_i18n": {
		"en_US": "Boost contents in a category for users belonging to a given user segment."
	},
	"elementDefinition": {
		"category": "conditional",
		"configuration": {
			"queryConfiguration": {
				"queryEntries": [
					{
						"clauses": [
							{
								"context": "query",
								"occur": "should",
								"query": {
									"term": {
										"assetCategoryIds": {
											"boost": "${configuration.boost}",
											"value": "${configuration.asset_category_id}"
										}
									}
								}
							}
						],
						"condition": {
							"contains": {
								"parameterName": "user.active_segment_entry_ids",
								"value": "${configuration.user_segment_ids}"
							}
						}
					}
				]
			}
		},
		"icon": "thumbs-up",
		"uiConfiguration": {
			"fieldSets": [
				{
					"fields": [
						{
							"label": "Asset Category ID",
							"name": "asset_category_id",
							"type": "number"
						},
						{
							"label": "User Segment IDs",
							"name": "user_segment_ids",
							"type": "multiselect"
						},
						{
							"defaultValue": 20,
							"label": "Boost",
							"name": "boost",
							"type": "number",
							"typeOptions": {
								"min": 0
							}
						}
					]
				}
			]
		}
	},
	"title_i18n": {
		"en_US": "Boost Contents in a Category for a User Segment"
	}
}