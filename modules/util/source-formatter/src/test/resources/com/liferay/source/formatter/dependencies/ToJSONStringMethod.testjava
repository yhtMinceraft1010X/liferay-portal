package com.liferay.source.formatter.dependencies;

import com.liferay.portal.kernel.json.JSONObject;
import com.liferay.portal.kernel.json.JSONUtil;
import com.liferay.portal.kernel.log.Log;
import com.liferay.portal.kernel.log.LogFactoryUtil;

/**
 * @author Qi
 */
public class ToJSONStringMethod {

	public void test() {
		JSONUtil.put(
			"key", "key"
		).put(
			"value", "value"
		).toJSONString();

		JSONUtil.putAll(
			JSONUtil.put(
				"address", "@gmail.com"
			).put(
				"descriptionLanguageKey",
				"please-enable-imap-in-you-gmail-settings-for-mail-to-work"
			)
		).toJSONString();

		JSONObject jsonObject = toJSONObject();

		return jsonObject.toJSONString();
	}

	public JSONObject toJSONObject() {
		return JSONUtil.put(
			"createdLocalDateTime", "createdLocalDateTime"
		).put(
			"recipients",
			JSONUtil.put(
				"signers",
				JSONUtil.toJSONArray(
					"DSRecipients",
					JSONUtil.put(
						"email", "email"
					).put(
						"name", "name"
					),
					_log))
		).put(
			"senderEmailAddress", _testString()
		);
	}

	@Override
	public String toString() {
		return toJSONObject().toJSONString();
	}

	private String _testString() {
		return "senderEmailAddress";
	}

	private static final Log _log = LogFactoryUtil.getLog(JSONUtilCheck.class);

}