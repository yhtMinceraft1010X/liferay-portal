@component-name = "portal-wcm"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Fragments";

	setUp {
		task ("Set up instance and sign in") {
			TestCase.setUpPortalInstance();

			User.firstLoginPG();
		}

		task ("Add a site") {
			JSONGroup.addGroup(groupName = "Test Site Name");
		}

		task ("Add a content page") {
			JSONLayout.addPublicLayout(
				groupName = "Test Site Name",
				layoutName = "Test Page Name",
				type = "content");
		}
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONGroup.deleteGroupByName(groupName = "Test Site Name");
		}
	}

	@description = "This is a test for LPS-140820. The user could decrease the Number of Slides in Slider."
	@priority = "5"
	test DecreaseNumberOfSlides {
		property portal.acceptance = "true";

		task ("Add a Slider fragment to a display page template for Web Content Article and Basic Web Content") {
			JSONLayoutpagetemplate.addDisplayPageTemplateEntry(
				contentType = "Web Content Article",
				displayPageTemplateEntryName = "Display Page Name",
				groupName = "Test Site Name",
				subType = "Basic Web Content");

			DisplayPageTemplatesAdmin.openDisplayPagesAdmin(siteURLKey = "test-site-name");

			DisplayPageTemplatesAdmin.gotoDisplayPage(displayPageName = "Display Page Name");

			PageEditor.addFragment(
				collectionName = "Basic Components",
				fragmentName = "Slider");
		}

		task ("Map the Title and Author Name fields to title and subtitle fields in the first slide") {
			PageEditorMapping.mapEditableTextToField(
				field = "Title",
				fragmentName = "Slider",
				id = "01-02-title");

			PageEditorMapping.mapEditableTextToField(
				field = "Author Name",
				fragmentName = "Slider",
				id = "01-03-subtitle");
		}

		task ("Change the Number of Slides to 2") {
			PageEditor.gotoConfiguration(fragmentName = "Slider");

			PageEditor.configureFragment(numberOfSlides = "2");
		}

		task ("Map the Content and Display Page URL fields to title and subtitle fields in the second slide") {
			ContentPages.focusSlide(slideNumber = "2");

			PageEditorMapping.mapEditableTextToField(
				field = "Content",
				fragmentName = "Slider",
				id = "02-02-title");

			PageEditorMapping.mapEditableTextToField(
				field = "Display Page URL",
				fragmentName = "Slider",
				id = "02-03-subtitle");
		}

		task ("View the third slide is not shown in Slide") {
			AssertElementNotPresent(
				ariaLabel = "Focus slide 3",
				locator1 = "Button#ANY_WITH_ARIA_LABEL");

			PageEditor.clickPublish();
		}

		task ("Add a web content and associate it to the display page template") {
			JSONWebcontent.addWebContent(
				content = "Web Content Content",
				groupName = "Test Site Name",
				title = "Web Content Title");

			WebContentNavigator.openWebContentAdmin(siteURLKey = "test-site-name");

			WebContentNavigator.gotoEditCP(webContentTitle = "Web Content Title");

			WebContent.editDisplayPage(
				pageName = "Display Page Name",
				pageType = "Display Page Templates");

			PortletEntry.publish();
		}

		task ("View the mapped contents of the slides in associated display page template") {
			WebContentNavigator.gotoEntryMenuItem(
				entry = "Web Content Title",
				menuItem = "View Content");

			ControlMenu.viewHeaderTitle(headerTitle = "Display Page Name");

			var baseURL = PropsUtil.get("portal.url");

			ContentPages.focusSlide(slideNumber = "1");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "01-02-title",
				text = "Web Content Title");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "01-03-subtitle",
				text = "Test Test");

			ContentPages.focusSlide(slideNumber = "2");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "02-02-title",
				text = "Web Content Content");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "02-03-subtitle",
				text = "${baseURL}/web/test-site-name/w/web-content-title");
		}

		task ("View the third slide is not shown in Slide") {
			AssertElementNotPresent(
				ariaLabel = "Focus slide 3",
				locator1 = "Button#ANY_WITH_ARIA_LABEL");
		}
	}

	@description = "This is a test for LPS-140820. The user could increase the Number of Slides in Slider."
	@priority = "5"
	test IncreaseNumberOfSlides {
		property portal.acceptance = "true";

		task ("Add a Slider fragment to page") {
			ContentPagesNavigator.openEditContentPage(
				pageName = "Test Page Name",
				siteName = "Test Site Name");

			PageEditor.addFragment(
				collectionName = "Basic Components",
				fragmentName = "Slider");
		}

		task ("Edit the inline texts in the first slide") {
			PageEditor.editFragmentText(
				fragmentName = "Slider",
				id = "01-02-title",
				text = "NBA Finals");

			PageEditor.editFragmentText(
				fragmentName = "Slider",
				id = "01-03-subtitle",
				text = "Nets vs Warriors");
		}

		task ("Change the Number of Slides to 4") {
			PageEditor.gotoConfiguration(fragmentName = "Slider");

			PageEditor.configureFragment(numberOfSlides = "4");
		}

		task ("View inline texts of slides") {
			PageEditor.viewFragmentEditableText(
				editableText = "NBA Finals",
				fragmentName = "Slider",
				id = "01-02-title");

			PageEditor.viewFragmentEditableText(
				editableText = "Nets vs Warriors",
				fragmentName = "Slider",
				id = "01-03-subtitle");

			ContentPages.focusSlide(slideNumber = "2");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 2 Title",
				fragmentName = "Slider",
				id = "02-02-title");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 2 Subtitle",
				fragmentName = "Slider",
				id = "02-03-subtitle");

			ContentPages.focusSlide(slideNumber = "3");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 3 Title",
				fragmentName = "Slider",
				id = "03-02-title");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 3 Subtitle",
				fragmentName = "Slider",
				id = "03-03-subtitle");

			ContentPages.focusSlide(slideNumber = "4");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 4 Title",
				fragmentName = "Slider",
				id = "04-02-title");

			PageEditor.viewFragmentEditableText(
				editableText = "Slide 4 Subtitle",
				fragmentName = "Slider",
				id = "04-03-subtitle");
		}

		task ("Edit the inline texts in the fourth slide") {
			PageEditor.editFragmentText(
				fragmentName = "Slider",
				id = "04-02-title",
				text = "New Movie Releases");

			PageEditor.editFragmentText(
				fragmentName = "Slider",
				id = "04-03-subtitle",
				text = "Eternals");

			PageEditor.clickPublish();
		}

		task ("View inline texts of slides at view mode") {
			ContentPagesNavigator.openViewContentPage(
				pageName = "Test Page Name",
				siteName = "Test Site Name");

			ContentPages.focusSlide(slideNumber = "1");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "01-02-title",
				text = "NBA Finals");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "01-03-subtitle",
				text = "Nets vs Warriors");

			ContentPages.focusSlide(slideNumber = "2");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "02-02-title",
				text = "Slide 2 Title");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "02-03-subtitle",
				text = "Slide 2 Subtitle");

			ContentPages.focusSlide(slideNumber = "3");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "03-02-title",
				text = "Slide 3 Title");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "03-03-subtitle",
				text = "Slide 3 Subtitle");

			ContentPages.focusSlide(slideNumber = "4");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "04-02-title",
				text = "New Movie Releases");

			ContentPages.viewFragmentText(
				fragmentName = "slider",
				id = "04-03-subtitle",
				text = "Eternals");
		}
	}

}