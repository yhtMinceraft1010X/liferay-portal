	@description = "Feature ID: Legacy | Automation ID: LRAC-8282 | Test Summary: Anonymous converts to known"
	@priority = "4"
	test CanAnonymousIndividualsConvertsToKnownIndividuals {
		task ("Connect Analytics Cloud to DXP") {
			var propertyName = ACDXPSettings.connectDXPtoAnalyticsCloud();
		}

		task ("Create new user") {
			JSONUser.addUser(
				userEmailAddress = "ac@liferay.com",
				userFirstName = "ac",
				userLastName = "ac",
				userScreenName = "ac");
		}

		task ("Login with new user and see Site") {
			User.logoutAndLoginPG(
				userLoginEmailAddress = "ac@liferay.com",
				userLoginFullName = "ac ac");

			Navigator.openURL();
		}

		task ("Close all sessions and switch to new property in AC and go to Individuals") {
			ACUtils.closeAllSessions();

			Pause(locator1 = "30000");

			ACUtils.launchAC();

			ACProperties.switchProperty(propertyName = "${propertyName}");

			ACNavigation.goToIndividuals();
		}

		task ("Go to Individuals overview") {
			ACTimeFilter.clickTimeFilterButton();

			ACTimeFilter.setLast24Hours();
		}

		task ("Hover on the Active Individuals graph and assert the elements that are shown on the tooltip") {
			Click.mouseDownMouseUp(locator1 = "ACIndividualsDashboard#ACTIVE_INDIVIDUAL_CHART");

			for (var current : list "Known-1,Anonymous-1,Total-2") {
				var visitorsType = StringUtil.extractFirst("${current}","-");
				var valueVisitors = StringUtil.extractLast("${current}","-");

				AssertElementPresent(
					key_value = "${valueVisitors}",
					key_visitors = "${visitorsType}",
					locator1 = "ACSites#TOOLTIP_UNIQUE_VISITORS");
			}
		}

		task ("Open DXP") {
			ACUtils.launchDXP();
		}

		task ("Sync the Contact Data") {
			ACDXPSettings.syncNewContactData();
		}

		task ("Login with new user and see Site") {
			User.logoutAndLoginPG(
				userLoginEmailAddress = "ac@liferay.com",
				userLoginFullName = "ac ac");

			Navigator.openURL();
		}

		task ("Close all sessions and switch to new property in AC and go to Individuals") {
			ACUtils.closeAllSessions();

			Pause(locator1 = "30000");

			ACUtils.launchAC();

			ACProperties.switchProperty(propertyName = "${propertyName}");

			ACNavigation.goToIndividuals();
		}

		task ("Go to Individuals overview") {
			ACTimeFilter.clickTimeFilterButton();

			ACTimeFilter.setLast24Hours();
		}

		task ("Hover on the Active Individuals graph and assert the elements that are shown on the tooltip") {
			Click.mouseDownMouseUp(locator1 = "ACIndividualsDashboard#ACTIVE_INDIVIDUAL_CHART");

			for (var current : list "Known-2,Anonymous-0,Total-2") {
				var visitorsType = StringUtil.extractFirst("${current}","-");
				var valueVisitors = StringUtil.extractLast("${current}","-");

				AssertElementPresent(
					key_value = "${valueVisitors}",
					key_visitors = "${visitorsType}",
					locator1 = "ACSites#TOOLTIP_UNIQUE_VISITORS");
			}
		}
	}

