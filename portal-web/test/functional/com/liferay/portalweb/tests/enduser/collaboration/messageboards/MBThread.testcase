		LexiconEntry.gotoEntry(rowEntry = "MB Thread Message Subject");

		Click(
			key_text = "Link to Page",
			locator1 = "Link#ANY");

		AssertVisible(
			key_pageName = "Message Boards Page",
			locator1 = "Home#PAGE_ACTIVE");
	}

