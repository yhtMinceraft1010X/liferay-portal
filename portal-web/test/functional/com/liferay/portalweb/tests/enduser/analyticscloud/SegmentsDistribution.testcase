			Click(
				labelOption = "Name",
				locator1 = "FormViewBuilder#FIELD_LABEL_OPTION");
		}

		task ("Sort the Names in ascending order") {
			ACInterests.viewIndividualInterestSpecificOrder(interestTopic = "liferay liferay,ac ac");
