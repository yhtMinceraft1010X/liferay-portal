		// Add a configured SP connection to an IdP

		if (isSet(userEmailAddress)) {
			User.firstLoginUI(
				password = "test",
				specificURL = "${idpURL}",
				userEmailAddress = "${userEmailAddress}");
		}
		else {
			User.firstLoginUI(
				password = "test",
				specificURL = "${idpURL}",
				userEmailAddress = "test@liferay.com");
		}

		ApplicationsMenu.gotoPortlet(
			category = "Security",
